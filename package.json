{
	"name": "canine-shelter-backend",
	"version": "0.0.1",
	"description": "The backend code for The Canine Shelter.",
	"main": "index.js",
	"scripts": {
		"test": "jest",
		"test:watch": "jest --watch",
		"test:coverage": "jest --coverage",
		"start": "node index.js",
		"debug": "nodemon --inspect index.js",
		"docs": "jsdoc -c jsdoc.conf.json",
		"linter": "./node_modules/.bin/eslint --fix .",
		"db:migrate": "knex migrate:latest",
		"db:rollback": "knex migrate:rollback --all",
		"db:seed": "knex seed:run",
		"db:refresh": "npm run db:rollback && npm run db:migrate && npm run db:seed"
	},
	"repository": {
		"type": "git",
		"url": "https://github.coventry.ac.uk/6003CEM-2021JANMAY/6003CEM_backend.git"
	},
	"jest": {
		"testEnvironment": "node",
		"coveragePathIgnorePatterns": [
			".vscode",
			"db",
			"docs",
			"node_modules",
			"openapi"
		]
	},
	"engines": {
		"node": "14.x",
		"npm": "7.x"
	},
	"author": "Bartlomiej Wlodarski",
	"license": "ISC",
	"dependencies": {
		"@koa/cors": "^3.3.0",
		"ajv": "^8.11.0",
		"ajv-formats": "^2.1.1",
		"bcryptjs": "^2.4.3",
		"dotenv": "^16.0.1",
		"etag": "^1.8.1",
		"fs": "*",
		"jsonwebtoken": "^8.5.1",
		"knex": "^2.1.0",
		"koa": "^2.13.4",
		"koa-body": "^4.2.0",
		"koa-bodyparser": "^4.3.0",
		"koa-passport": "^4.1.3",
		"koa-router": "^10.0.0",
		"mime-types": "^2.1.35",
		"mysql2": "^2.3.3",
		"passport-google-oauth20": "^2.0.0",
		"passport-http": "^0.3.0",
		"passport-jwt": "^4.0.0",
		"promise-mysql": "^5.0.2",
		"role-acl": "^4.5.4",
		"twit": "^2.2.11",
		"uuid": "^3.4.0"
	},
	"devDependencies": {
		"@types/iconv-lite": "^0.0.1",
		"@types/jest": "^28.1.1",
		"clean-jsdoc-theme": "^4.0.4",
		"docdash": "^1.2.0",
		"eslint": "^7.23.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-import": "^2.26.0",
		"eslint-plugin-jest": "^26.5.3",
		"eslint-plugin-prettier": "^4.0.0",
		"jest": "^28.1.1",
		"jsdoc": "^3.6.10",
		"mock-fs": "^5.1.2",
		"nodemon": "^2.0.16",
		"prettier": "2.7.1",
		"supertest": "^6.1.3"
	}
}
