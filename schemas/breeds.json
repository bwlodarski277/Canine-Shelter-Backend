{
	"$schema": "http://json-schema.org/draft-07/schema",
	"definitions": {
		"breed": {
			"$id": "#breed",
			"title": "Breed",
			"description": "Data to register a new breed",
			"type": "object",
			"properties": {
				"name": {
					"description": "Breed name",
					"type": "string",
					"examples": ["Corgi"],
					"maxLength": 64
				},
				"description": {
					"description": "Description talking about the breed",
					"type": "string",
					"examples": ["Herding dog originating from Wales"]
				}
			},
			"required": ["name"],
			"additionalProperties": false
		},
		"breedUpdate": {
			"$id": "#breedUpdate",
			"title": "Breed",
			"description": "Data to update a breed",
			"type": "object",
			"properties": {
				"name": {
					"description": "Breed name",
					"type": "string",
					"examples": ["Corgi"],
					"maxLength": 64
				},
				"description": {
					"description": "Description talking about the breed",
					"type": "string",
					"examples": ["Herding dog originating from Wales"]
				}
			},
			"additionalProperties": false
		},
		"breedData": {
			"$id": "#breedData",
			"title": "Breed information record",
			"type": "object",
			"properties": {
				"id": {
					"description": "Breed ID",
					"type": "integer"
				},
				"name": {
					"description": "Breed name",
					"type": "string"
				},
				"description": {
					"description": "Breed description",
					"type": "string"
				}
			}
		},
		"breeds": {
			"$id": "#breeds",
			"title": "Breeds list",
			"description": "List of breeds",
			"type": "array",
			"items": {
				"$ref": "#/definitions/breedData"
			}
		},
		"breedCreated": {
			"$id": "#breedCreated",
			"title": "Breed created",
			"description": "Confirmation of a created breed",
			"type": "object",
			"properties": {
				"id": {
					"description": "ID of the newly created breed",
					"type": "integer",
					"examples": [1]
				},
				"created": {
					"description": "Indiactor of creation success",
					"type": "boolean"
				},
				"link": {
					"description": "Path to the new breed record",
					"type": "string",
					"format": "uri",
					"examples": ["/breeds/1"]
				}
			}
		},
		"breedUpdated": {
			"$id": "#breedUpdated",
			"title": "Breed updated",
			"description": "Confirmation of breed update",
			"type": "object",
			"properties": {
				"id": {
					"description": "ID of the updated breed",
					"type": "integer",
					"examples": [1]
				},
				"created": {
					"description": "Indiactor of update success",
					"type": "boolean"
				},
				"link": {
					"description": "Path to the updated breed record",
					"type": "string",
					"format": "uri",
					"examples": ["/breeds/1"]
				}
			}
		},
		"breedDeleted": {
			"$id": "#breedDeleted",
			"title": "Breed deleted",
			"description": "Confirmation of breed removal",
			"type": "object",
			"properties": {
				"id": {
					"description": "ID of the deleted breed",
					"type": "integer",
					"examples": [2]
				},
				"deleted": {
					"description": "Indiactor of removal success",
					"type": "boolean"
				}
			},
			"additionalProperties": false
		},
		"breedDogs": {
			"$id": "#breedDogs",
			"title": "Breed dogs",
			"description": "List of dogs of a certain breed",
			"type": "array",
			"items": {
				"$ref": "./dogs.json#/definitions/dogBreedData"
			}
		}
	}
}
