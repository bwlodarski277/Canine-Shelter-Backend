{
	"$schema": "http://json-schema.org/draft-07/schema",
	"definitions": {
		"user": {
			"$id": "#user",
			"title": "User",
			"description": "Data to register a new user",
			"type": "object",
			"properties": {
				"username": {
					"description": "Unique username",
					"type": "string",
					"minLength": 4,
					"maxLength": 32,
					"examples": ["userName"]
				},
				"email": {
					"description": "User email address",
					"type": "string",
					"format": "email"
				},
				"password": {
					"description": "User's password of choice",
					"type": "string",
					"minLength": 8,
					"maxLength": 72,
					"examples": ["password"]
				},
				"firstName": {
					"description": "User's first name",
					"type": "string",
					"maxLength": 32,
					"examples": ["John"]
				},
				"lastName": {
					"description": "User's last name",
					"type": "string",
					"maxLength": 32,
					"examples": ["Doe"]
				},
				"imageUrl": {
					"description": "Link to the user's profile picture",
					"type": "string",
					"pattern": "uri",
					"examples": ["https://picsum.photos/200"]
				}
			},
			"required": ["username", "email", "password"]
		},
		"userData": {
			"$id": "#userData",
			"title": "User data",
			"description": "User information record",
			"type": "object",
			"properties": {
				"id": {
					"description": "User ID",
					"type": "integer",
					"examples": [4]
				},
				"username": {
					"description": "Unique username",
					"type": "string",
					"examples": ["JohnDoe2"]
				},
				"email": {
					"description": "User email address",
					"type": "string",
					"format": "email"
				},
				"firstName": {
					"description": "User's first name",
					"type": "string",
					"examples": ["John"]
				},
				"lastName": {
					"description": "User's last name",
					"type": "string",
					"examples": ["Doe"]
				},
				"dateCreated": {
					"description": "User creation date and time",
					"type": "string",
					"examples": ["2021-02-25 13:14:56"]
				},
				"dateModified": {
					"description": "Date and time of last user update",
					"type": "string",
					"examples": ["2021-02-25 13:15:11"]
				},
				"imageUrl": {
					"description": "Link to the user's profile picture",
					"type": "string",
					"pattern": "uri",
					"examples": ["https://picsum.photos/200"]
				}
			}
		},
		"users": {
			"$id": "users",
			"title": "Users",
			"description": "List of users",
			"type": "array",
			"items": {
				"$ref": "#/definitions/userData"
			}
		},
		"userCreated": {
			"$id": "#userCreated",
			"title": "User created",
			"description": "Confirmation of a created user",
			"type": "object",
			"properties": {
				"id": {
					"description": "ID of the newly created user",
					"type": "integer",
					"examples": [4]
				},
				"created": {
					"description": "Indiactor of creation success",
					"type": "boolean"
				},
				"link": {
					"description": "Path to the new user record",
					"type": "string",
					"format": "uri",
					"examples": ["/users/4"]
				}
			}
		},
		"userUpdated": {
			"$id": "#userUpdated",
			"title": "User updated",
			"description": "Confirmation of user update",
			"type": "object",
			"properties": {
				"id": {
					"description": "ID of the updated user",
					"type": "integer",
					"examples": [4]
				},
				"updated": {
					"description": "Indiactor of update success",
					"type": "boolean"
				},
				"link": {
					"description": "Path to the updated user record",
					"type": "string",
					"format": "uri",
					"examples": ["/users/4"]
				}
			}
		},
		"userDeleted": {
			"$id": "#userDeleted",
			"title": "User deleted",
			"description": "Confirmation of user removal",
			"type": "object",
			"properties": {
				"id": {
					"description": "ID of the deleted user",
					"type": "integer",
					"examples": [4]
				},
				"deleted": {
					"description": "Indiactor of removal success",
					"type": "boolean"
				}
			}
		},
		"favourite": {
			"$id": "#favourite",
			"title": "Favourite",
			"description": "Data to register a new favourite",
			"type": "object",
			"properties": {
				"userId": {
					"description": "ID of the user favouriting a dog",
					"type": "integer",
					"minimum": 1,
					"examples": [4]
				},
				"dogId": {
					"description": "ID of the dog the user is favouriting",
					"type": "integer",
					"minimum": 1,
					"examples": [2]
				}
			},
			"required": ["userId", "dogId"]
		},
		"favouriteData": {
			"$id": "#favouriteData",
			"title": "Favourite data",
			"description": "Favourite information record",
			"type": "object",
			"properties": {
				"id": {
					"description": "Favourite ID",
					"type": "integer",
					"examples": [1]
				},
				"userId": {
					"description": "ID of the user favouriting a dog",
					"type": "integer",
					"examples": [4]
				},
				"dogId": {
					"description": "ID of the dog the user is favouriting",
					"type": "integer",
					"examples": [2]
				}
			}
		},
		"favourites": {
			"$id": "favourites",
			"title": "Favourites",
			"description": "List of favourites for a given user",
			"type": "array",
			"items": {
				"$ref": "#/definitions/favouriteData"
			}
		},
		"favouriteCreated": {
			"$id": "#favouriteCreated",
			"title": "Favourite created",
			"description": "Confirmation of a created favourite",
			"type": "object",
			"properties": {
				"id": {
					"description": "ID of the newly created favourite",
					"type": "integer",
					"examples": [1]
				},
				"created": {
					"description": "Indiactor of creation success",
					"type": "boolean"
				},
				"link": {
					"description": "Path to the new favourite record",
					"type": "string",
					"format": "uri",
					"examples": ["/users/4/favourites/1"]
				}
			}
		},
		"favouriteDeleted": {
			"$id": "#favouriteDeleted",
			"title": "Favourite deleted",
			"description": "Confirmation of favourite removal",
			"type": "object",
			"properties": {
				"id": {
					"description": "ID of the deleted favourite",
					"type": "integer",
					"examples": [1]
				},
				"deleted": {
					"description": "Indiactor of removal success",
					"type": "boolean"
				}
			}
		}
	}
}
