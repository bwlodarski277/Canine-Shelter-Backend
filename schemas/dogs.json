{
	"$schema": "http://json-schema.org/draft-07/schema",
	"definitions": {
		"dog": {
			"$id": "#dog",
			"title": "Dog",
			"description": "Data to register a new dog",
			"type": "object",
			"properties": {
				"name": {
					"description": "Dog name",
					"type": "string",
					"examples": ["Rex"],
					"minLength": 3,
					"maxLength": 32
				},
				"description": {
					"description": "Description talking about the dog",
					"type": "string",
					"examples": ["A beautiful corgi"]
				},
				"age": {
					"description": "Dog's age in years",
					"type": "integer",
					"examples": [5],
					"minimum": 0
				},
				"gender": {
					"description": "Dog's gender. 0 for female, 1 for male",
					"type": "boolean",
					"examples": [1]
				},
				"imageUrl": {
					"description": "Path to a picture of the dog",
					"type": "string",
					"examples": ["https://picsum.photos/200"]
				}
			},
			"required": ["name"],
			"additionalProperties": false
		},
		"dogUpdate": {
			"$id": "#dogUpdate",
			"title": "Dog Update",
			"description": "Data to update a dog",
			"type": "object",
			"properties": {
				"name": {
					"description": "Dog name",
					"type": "string",
					"examples": ["Rex"],
					"minLength": 3,
					"maxLength": 32
				},
				"description": {
					"description": "Description talking about the dog",
