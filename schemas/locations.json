{
	"$schema": "http://json-schema.org/draft-07/schema",
	"definitions": {
		"location": {
			"$id": "#location",
			"title": "Location",
			"description": "Data to register a new location",
			"type": "object",
			"properties": {
				"name": {
					"description": "Location name",
					"type": "string",
					"maxLength": 128,
					"examples": ["Coventry Shelter"]
				},
				"address": {
					"description": "Location address",
					"type": "string",
					"examples": [
						"Coventry Shelter\n,1 Sample Road,\nCoventry,\nCV1 5FB"
					]
				}
			},
			"required": ["name"],
			"additionalProperties": false
		},
		"locationData": {
			"$id": "#locationData",
			"title": "Location data",
			"description": "Location information record",
			"type": "object",
			"properties": {
				"id": {
					"description": "Location ID",
					"type": "integer",
					"examples": [1]
				},
				"name": {
					"description": "Location name",
					"type": "string",
					"examples": ["Coventry Shelter"]
				},
				"address": {
					"description": "Location address",
					"type": "string",
					"examples": [
						"Coventry Shelter\n,1 Sample Road,\nCoventry,\nCV1 5FB"
					]
				}
			}
		},
		"locations": {
			"$id": "locations",
			"title": "Locations",
			"description": "List of locations",
			"type": "array",
			"items": {
				"$ref": "#/definitions/locationData"
			}
		},
		"locationCreated": {
			"$id": "#locationCreated",
			"title": "Location created",
			"description": "Confirmation of a created location",
			"type": "object",
			"properties": {
				"id": {
					"description": "ID of the newly created location",
					"type": "integer",
					"examples": [1]
				},
				"created": {
					"description": "Indiactor of creation success",
					"type": "boolean"
				},
				"link": {
					"description": "Path to the new location record",
					"type": "string",
					"format": "uri",
					"examples": ["/locations/1"]
				}
			}
		},
		"locationUpdated": {
			"$id": "#locationUpdated",
			"title": "Location updated",
			"description": "Confirmation of location update",
			"type": "object",
			"properties": {
				"id": {
					"description": "ID of the updated location",
					"type": "integer",
					"examples": [1]
				},
				"updated": {
					"description": "Indiactor of update success",
					"type": "boolean"
				},
				"link": {
					"description": "Path to the updated location record",
					"type": "string",
					"format": "uri",
					"examples": ["/locations/1"]
				}
			}
		},
		"locationDeleted": {
			"$id": "#locationDeleted",
			"title": "Location deleted",
			"description": "Confirmation of location removal",
			"type": "object",
			"properties": {
				"id": {
					"description": "ID of the deleted location",
					"type": "integer",
					"examples": [1]
				},
				"deleted": {
					"description": "Indiactor of removal success",
					"type": "boolean"
				}
			}
		},
		"locationDogs": {
			"$id": "#locationDogs",
			"title": "Location dogs",
			"description": "List of dogs at a given location",
			"type": "array",
			"items": {
				"$ref": "./dogs.json#/definitions/dogLocationData"
			}
		},
		"chat": {
			"$id": "#chat",
			"title": "Data to register a new chat",
			"type": "object",
			"properties": {
				"locationId": {
					"description": "ID of location to create a new chat at",
					"type": "integer",
					"minimum": 1
				},
				"userId": {
					"description": "ID of user to create chat with",
					"type": "integer",
					"minimum": 1
				}
			},
			"required": ["locationId", "userId"],
			"additionalProperties": false
		},
		"chatData": {
			"$id": "#chatdata",
			"title": "Chat data",
			"description": "Chat data record",
			"type": "object",
			"properties": {
				"id": {
					"description": "Chat ID",
					"type": "integer",
					"examples": [1]
				},
				"locationId": {
					"description": "ID of location linked to the chat",
					"type": "integer",
					"examples": [2]
				},
				"userId": {
					"description": "ID of user linked to the chat",
					"type": "integer",
					"examples": [4]
				}
			}
		},
		"chats": {
			"$id": "#chats",
			"title": "Chats list",
			"description": "List of chats at a given location",
			"type": "array",
			"items": {
				"$ref": "#/definitions/chatData"
			}
		},
		"chatCreated": {
			"$id": "#chatCreated",
			"title": "Chat created",
			"description": "Confirmation of a created chat",
			"type": "object",
			"properties": {
				"id": {
					"description": "ID of the newly created chat",
					"type": "integer",
					"examples": [1]
				},
				"created": {
					"description": "Indiactor of creation success",
					"type": "boolean"
				},
				"link": {
					"description": "Path to the new chat record",
					"type": "string",
					"format": "uri",
					"examples": ["/locations/1/chats/1"]
				}
			}
		},
		"chatDeleted": {
			"$id": "#chatDeleted",
			"title": "Chat deleted",
			"description": "Confirmation of chat removal",
			"type": "object",
			"properties": {
				"id": {
					"description": "ID of the deleted chat",
					"type": "integer",
					"examples": [1]
				},
				"deleted": {
					"description": "Indiactor of removal success",
					"type": "boolean"
				}
			}
		},
		"message": {
			"$id": "#message",
			"title": "Message",
			"description": "Data to register a new message",
			"type": "object",
			"properties": {
				"sender": {
					"description": "Sender indicator. 0 for staff, 1 for user",
					"type": "boolean",
					"examples": [0]
				},
				"message": {
					"description": "Message body",
					"type": "string",
					"examples": ["Example message"]
				}
			},
			"required": ["sender", "message"],
			"additionalProperties": false
		},
		"messageData": {
			"$id": "#messageData",
			"title": "Message data",
			"description": "Message information record",
			"type": "object",
			"properties": {
				"id": {
					"description": "Message ID",
					"type": "integer",
					"examples": [1]
				},
				"sender": {
					"description": "Sender indicator. 0 for staff, 1 for user",
					"type": "boolean",
					"examples": [0]
				},
				"dateCreated": {
					"description": "Date and time of message creation",
					"type": "string",
					"examples": ["2021-02-25 13:15:11"]
				},
				"message": {
					"description": "Message body",
					"type": "string",
					"examples": ["Example message"]
				}
			}
		},
		"messages": {
			"$id": "#messages",
			"title": "Messages list",
			"description": "List of messages in a given chat",
			"type": "array",
			"items": {
				"$ref": "#/definitions/messageData"
			}
		},
		"messageCreated": {
			"$id": "#messageCreated",
			"title": "Message created",
			"description": "Confirmation of a created message",
			"type": "object",
			"properties": {
				"id": {
					"description": "ID of the newly created message",
					"type": "integer",
					"examples": [3]
				},
				"created": {
					"description": "Indiactor of creation success",
					"type": "boolean"
				},
				"link": {
					"description": "Path to the new message record",
					"type": "string",
					"format": "uri",
					"examples": ["/locations/1/chats/1/messages/3"]
				}
			}
		},
		"messageDeleted": {
			"$id": "#messageDeleted",
			"title": "Message deleted",
			"description": "Confirmation of message removal",
			"type": "object",
			"properties": {
				"id": {
					"description": "ID of the deleted message",
					"type": "integer",
					"examples": [3]
				},
				"deleted": {
					"description": "Indiactor of removal success",
					"type": "boolean"
				}
			}
		}
	}
}
