{
	"env": {
		"browser": true,
		"commonjs": true,
		"es2021": true,
		"node": true,
		"jest/globals": true
	},
	"extends": ["plugin:prettier/recommended", "eslint:recommended"],
	"plugins": ["jest"],
	"parserOptions": { "ecmaVersion": 12 },
	"ignorePatterns": ["node_modules/*", "docs/*", "openapi/*", ".vscode/*"],
	"rules": {
		"prettier/prettier": [
			"error",
			{
				"singleQuote": true,
				"parser": "flow",
				"printWidth": 100,
				"tabWidth": 4,
				"useTabs": true,
				"semi": true,
				"trailingComma": "none",
				"arrowParens": "avoid"
			}
		],
		"no-unused-vars": ["error", { "ignoreRestSiblings": true }],
		"max-len": ["error", { "code": 120 }],
		"curly": ["error", "multi"],
		"consistent-return": "off",
		"eqeqeq": "error",
		"dot-notation": "error",
		"no-redeclare": "error",
		"strict": ["error"],
		"camelcase": ["error", { "ignoreImports": true }],
		"func-style": ["error", "expression"],
		"prefer-const": ["error", { "destructuring": "all" }],
		"no-lonely-if": "error",
		"no-else-return": "error"
	}
}
